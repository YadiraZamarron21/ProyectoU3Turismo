<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Turismo.Views.DetallesAtraccionView" Title="Detalles de las atracciones" BackgroundColor="DarkBlue">

    <StackLayout Margin="15" >
        <Label TextColor="Purple"  FontSize="Title" HorizontalOptions="Center" Text="{Binding  NombreAtraccion}"></Label>
        <Image  HeightRequest="250" Margin="10" Source="{Binding URLImagen}"></Image>
        
        <Label TextColor="Gray" Padding="20" FontSize="25" HorizontalOptions="Center" Text="{Binding  Ubicacion}"></Label>
        <Label TextColor="White" Padding="5" FontSize="25" HorizontalOptions="Center" Text="{Binding  Descripcion}"></Label>
    </StackLayout>

</ContentPage>